{% s'inspire du formulaire de symfony : http://symfony.com/doc/current/security/form_login_setup.html %}
{% extends "layout.html.twig" %}
{% block contenu %}
    <form method="post" action="{{ path('user.validFormlogin') }}">

        <div class="row">

            <fieldset>
                <legend>Se connecter  (avec twig)</legend>
                <label>Login :
                    <input name="login"  type="text"  size="18" value="" />
                </label>

                <label>Password :
                    <input name="password"  type="text"  size="18" value="" />
                </label>
                {% if app.session.get('erreur') is not empty %}
                    <small class="error">{{ app.session.get('erreur') }}</small>
                {% endif %}

                <input type="submit" name="seConnecter" value="Se connecter" />
	</fieldset>
</div>
</form>

{% endblock %}
